<config>
    <modules>
        <CDD_CategorySearch>
            <version>1.0.0</version>
        </CDD_CategorySearch>
    </modules>
    <global>
        <blocks>
            <catalogcategorysearch>
                <class>CDD_CategorySearch_Block</class>
            </catalogcategorysearch>
        </blocks>
        <helpers>
            <catalogcategorysearch>
                <class>CDD_CategorySearch_Helper</class>
            </catalogcategorysearch>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <catalogcategorysearch>
                    <file>catalogcategorysearch.xml</file>
                </catalogcategorysearch>
            </updates>
        </layout>
    </frontend>
    <default>
        <catalog>
            <catalog_category_search>
                <select_category_on_category_pages>1</select_category_on_category_pages>
                <show_subcategories>1</show_subcategories>
                <indentation_text><![CDATA[-- ]]></indentation_text>
            </catalog_category_search>
        </catalog>
    </default>
</config>
