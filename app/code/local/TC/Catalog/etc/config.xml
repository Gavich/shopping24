<?xml version="1.0"?>
<config>
    <modules>
        <TC_Catalog>
            <version>0.0.1</version>
        </TC_Catalog>
    </modules>
    <global>
        <helpers>
            <tccatalog>
                <class>TC_Catalog_Helper</class>
            </tccatalog>
            <catalog>
                <rewrite>
                    <data>TC_Catalog_Helper_Data</data>
                </rewrite>
            </catalog>
        </helpers>
        <blocks>
            <tccatalog>
                <class>TC_Catalog_Block</class>
            </tccatalog>
        </blocks>
        <events>
            <catalog_controller_category_init_after>
                <observers>
                    <tccatalog_category_init_after>
                        <type>singleton</type>
                        <class>TC_Catalog_Model_Observer</class>
                        <method>categoryInitAfter</method>
                    </tccatalog_category_init_after>
                </observers>
            </catalog_controller_category_init_after>
        </events>
    </global>
    <default>
        <catalog>
            <frontend>
                <color_is_enabled>1</color_is_enabled>
                <color_attribute_code>dim1</color_attribute_code>
            </frontend>
        </catalog>
    </default>
</config>
